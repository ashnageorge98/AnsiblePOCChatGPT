pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git credentialsId: 'github-pat', git branch: 'main', url: 'https://github.com/ashnageorge98/ansible-web-deploy.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook playbook: 'deploy_nginx.yml', inventory: 'hosts'
            }
        }
    }
}
